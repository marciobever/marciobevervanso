{
  "compilerOptions": {
    /* ---------- Alvo de build ---------- */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* ---------- Verificação e compilação ---------- */
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    /* ---------- Módulos e resolução ---------- */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },

    /* ---------- JSX e Next ---------- */
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  },

  /* ---------- Inclusões ---------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],

  /* ---------- Exclusões ---------- */
  "exclude": ["node_modules"]
}
